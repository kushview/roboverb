{
    "version": 4,
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/libs/lvtk",
                "${workspaceFolder}/libs/lvtk/libs/pugl",
                "${workspaceFolder}/libs/lvtk/libs/nuklear",
                "/usr/local/include/juce-5"
            ],
            "defines": [
                "ROBOVERB_UI=1"
            ],
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
            ],
            "compilerPath": "/usr/local/bin/gcc-6",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "clang-x64"
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/src/*",
                "${workspaceFolder}/subprojects/lui/include/*",
                "${workspaceFolder}/subprojects/lvtk/include/*",
                "${workspaceFolder}/subprojects/clap/include/*",
                "${workspaceFolder}/subprojects/clap-helpers/include/*",
                "${default}"
            ],
            "defines": [
                "ROBOVERB_UI=1"
            ],
            "compilerPath": "${default}",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "${default}",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ]
}